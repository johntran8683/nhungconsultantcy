# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nhung?schema=public

# Email Configuration
# Choose your email provider: 'brevo' (recommended) or 'resend'
EMAIL_PROVIDER=brevo

# Brevo Configuration (Free tier: 300 emails/day permanently)
BREVO_API_KEY=your-brevo-api-key-here

# Resend Configuration (Alternative provider)
RESEND_API_KEY=your-resend-api-key-here

# Email sender configuration (MUST be a valid domain for Brevo)
EMAIL_FROM=Nhung Consultancy <contact@nhungconsultancy.com>

# Application Environment
NODE_ENV=development

# Optional: Analytics and Monitoring
NEXT_TELEMETRY_DISABLED=1
